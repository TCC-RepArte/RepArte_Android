<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_gradiant4"
    tools:context=".NotificacoesActivity">

    <!-- Header com título -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_notificacoes"
        android:layout_width="0dp"
        android:layout_height="@dimen/header_height"
        android:layout_marginTop="16dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/titulo_notificacoes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/hammersmith_one"
            android:text="Notificações"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- RecyclerView para lista de notificações -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_notificacoes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:background="@android:color/transparent"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/menu_inferior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_notificacoes" />

    <!-- Estado vazio (quando não há notificações) -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/empty_state"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/menu_inferior"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/header_notificacoes">

        <ImageView
            android:id="@+id/ic_bell_sleeping"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:contentDescription="Nenhuma notificação"
            android:src="@drawable/sino"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3" />

        <TextView
            android:id="@+id/texto_empty_principal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:fontFamily="@font/league_spartan_bold"
            android:text="Nenhuma notificação ainda"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ic_bell_sleeping" />

        <TextView
            android:id="@+id/texto_empty_secundario"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="32dp"
            android:layout_marginEnd="32dp"
            android:fontFamily="@font/roboto_medium"
            android:gravity="center"
            android:text="Você será notificado sobre novas postagens, comentários em suas análises, obras recomendadas e muito mais!"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:alpha="0.8"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/texto_empty_principal" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Menu inferior -->
    <LinearLayout
        android:id="@+id/menu_inferior"
        android:layout_width="0dp"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/cont_tela"
        android:paddingHorizontal="16dp"
        android:weightSum="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- primeiro botão (home) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/home_container"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="6dp"
                android:background="@drawable/div_tela2"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/home_img"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:contentDescription="Início"
                    android:src="@drawable/home_img" />
            </LinearLayout>
        </LinearLayout>

        <!-- segundo botão (lápis)-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/lapis_container"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="6dp"
                android:background="@drawable/div_tela2"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/lapis_img"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:contentDescription="Criar Postagem"
                    android:src="@drawable/lapis_img" />
            </LinearLayout>
        </LinearLayout>

        <!-- terceiro botão (sininho) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/sino_container"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginHorizontal="6dp"
                android:background="@drawable/div_tela3"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/sino_txt"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:contentDescription="Notificações"
                    android:src="@drawable/sino" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>

