<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_gradiant2">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="10dp"
        android:shadowColor="#7C3AED"
        android:shadowDx="0"
        android:shadowDy="2"
        android:shadowRadius="6"
        android:text="Personalize sua experiência"
        android:textColor="#FFFFFF"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Divisor sutil -->
    <View
        android:id="@+id/dividerTitle"
        android:layout_width="60dp"
        android:layout_height="3dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/divider_gradient"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitle" />

    <!-- Descrição -->
    <TextView
        android:id="@+id/tvDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="sans-serif-medium"
        android:text="Escolha seus interesses favoritos e deixe o Reparte com a sua cara!"
        android:textColor="#CCCCCC"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/dividerTitle" />

    <!-- Grupo de Chips (Tags) -->
    <com.google.android.material.chip.ChipGroup
        android:id="@+id/chipGroupTags"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="16dp"
        app:chipSpacing="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDescription"
        app:lineSpacing="16dp"
        app:singleSelection="false">

        <com.google.android.material.chip.Chip
            android:id="@+id/chipNoticias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notícias"
            android:textColor="#FFFFFF"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="@color/chip_selector"
            app:chipStrokeColor="#D45E06"
            app:chipStrokeWidth="1dp"
            app:cornerRadius="16dp"
            android:checkable="true"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipEsportes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Esportes"
            android:textColor="#FFFFFF"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="@color/chip_selector"
            app:chipStrokeColor="#D45E06"
            app:chipStrokeWidth="1dp"
            app:cornerRadius="16dp"
            android:checkable="true"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipPolitica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Política"
            android:textColor="#FFFFFF"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="@color/chip_selector"
            app:chipStrokeColor="#D45E06"
            app:chipStrokeWidth="1dp"
            app:cornerRadius="16dp"
            android:checkable="true"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipGeek"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cultura Geek/Nerd"
            android:textColor="#FFFFFF"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="@color/chip_selector"
            app:chipStrokeColor="#D45E06"
            app:chipStrokeWidth="1dp"
            app:cornerRadius="16dp"
            android:checkable="true"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipAcao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ação"
            android:textColor="#FFFFFF"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="@color/chip_selector"
            app:chipStrokeColor="#D45E06"
            app:chipStrokeWidth="1dp"
            app:cornerRadius="16dp"
            android:checkable="true"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipFilmesCults"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filmes Cults"
            android:textColor="#FFFFFF"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="@color/chip_selector"
            app:chipStrokeColor="#D45E06"
            app:chipStrokeWidth="1dp"
            app:cornerRadius="16dp"
            android:checkable="true"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipLitClassica"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Literatura Clássica"
            android:textColor="#FFFFFF"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="@color/chip_selector"
            app:chipStrokeColor="#D45E06"
            app:chipStrokeWidth="1dp"
            app:cornerRadius="16dp"
            android:checkable="true"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipLitBrasileira"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Literatura Brasileira"
            android:textColor="#FFFFFF"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="@color/chip_selector"
            app:chipStrokeColor="#D45E06"
            app:chipStrokeWidth="1dp"
            app:cornerRadius="16dp"
            android:checkable="true"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipContosTerror"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contos de Terror"
            android:textColor="#FFFFFF"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="@color/chip_selector"
            app:chipStrokeColor="#D45E06"
            app:chipStrokeWidth="1dp"
            app:cornerRadius="16dp"
            android:checkable="true"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipHorror"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Horror"
            android:textColor="#FFFFFF"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="@color/chip_selector"
            app:chipStrokeColor="#D45E06"
            app:chipStrokeWidth="1dp"
            app:cornerRadius="16dp"
            android:checkable="true"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipComedia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Comédia"
            android:textColor="#FFFFFF"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="@color/chip_selector"
            app:chipStrokeColor="#D45E06"
            app:chipStrokeWidth="1dp"
            app:cornerRadius="16dp"
            android:checkable="true"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipDrama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Drama"
            android:textColor="#FFFFFF"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="@color/chip_selector"
            app:chipStrokeColor="#D45E06"
            app:chipStrokeWidth="1dp"
            app:cornerRadius="16dp"
            android:checkable="true"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipTecnologia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tecnologia"
            android:textColor="#FFFFFF"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="@color/chip_selector"
            app:chipStrokeColor="#D45E06"
            app:chipStrokeWidth="1dp"
            app:cornerRadius="16dp"
            android:checkable="true"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipSaude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Saúde"
            android:textColor="#FFFFFF"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="@color/chip_selector"
            app:chipStrokeColor="#D45E06"
            app:chipStrokeWidth="1dp"
            app:cornerRadius="16dp"
            android:checkable="true"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipEducacao"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Educação"
            android:textColor="#FFFFFF"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="@color/chip_selector"
            app:chipStrokeColor="#D45E06"
            app:chipStrokeWidth="1dp"
            app:cornerRadius="16dp"
            android:checkable="true"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipGames"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Games"
            android:textColor="#FFFFFF"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="@color/chip_selector"
            app:chipStrokeColor="#D45E06"
            app:chipStrokeWidth="1dp"
            app:cornerRadius="16dp"
            android:checkable="true"/>

        <com.google.android.material.chip.Chip
            android:id="@+id/chipFeminismo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Feminismo"
            android:textColor="#FFFFFF"
            app:checkedIconVisible="false"
            app:chipBackgroundColor="@color/chip_selector"
            app:chipStrokeColor="#D45E06"
            app:chipStrokeWidth="1dp"
            app:cornerRadius="16dp"
            android:checkable="true"/>

    </com.google.android.material.chip.ChipGroup>

    <!-- Botão Continuar centralizado e destacado, largura reduzida -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnContinue"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:backgroundTint="#D45E06"
        android:text="Continuar"
        android:textColor="#FFFFFF"
        app:cornerRadius="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.8" />

</androidx.constraintlayout.widget.ConstraintLayout>