<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_gradiant2"
    tools:context=".MainActivity2">

    <!-- bolinhas de fundo -->

    <View
        android:id="@+id/circle0"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="328dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/bolinha_roxa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- texto -->

    <View
        android:id="@+id/circle1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="164dp"
        android:background="@drawable/bolinha_roxa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/circle2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="264dp"
        android:background="@drawable/bolinha_roxa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- barrinha de progresso de baixo -->

    <View
        android:id="@+id/circle3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="264dp"
        android:layout_marginEnd="52dp"
        android:background="@drawable/bolinha_roxa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/circle4"
        android:layout_width="16dp"
        android:layout_height="16dp"
        android:layout_marginStart="72dp"
        android:layout_marginTop="336dp"
        android:background="@drawable/bolinha_roxa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/circle5"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="224dp"
        android:layout_marginEnd="68dp"
        android:background="@drawable/bolinha_roxa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="391dp"
        android:layout_height="100dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="468dp"
        android:fontFamily="@font/hammersmith_one"
        android:gravity="start"
        android:text="Se interessou? Entre ou crie uma conta!  "
        android:textColor="#FF5722"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="8dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <View
            android:layout_width="16dp"
            android:layout_height="8dp"
            android:layout_marginEnd="8dp"
            android:background="@drawable/progresso00" />

        <View
            android:layout_width="16dp"
            android:layout_height="8dp"
            android:background="@drawable/progresso00"
            android:layout_marginEnd="8dp"/>

        <View
            android:layout_width="32dp"
            android:layout_height="8dp"
            android:background="@drawable/progresso"/>
    </LinearLayout>

    <!-- pular -->
    <TextView
        android:id="@+id/btnPular"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pular"
        android:textColor="#FF5722"
        android:textSize="20sp"
        android:fontFamily="@font/hammersmith_one"
        android:textStyle="bold"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="44dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <!-- Botão de imagem (Próximo) -->
    <ImageButton
        android:id="@+id/btnProximo"
        android:layout_width="87dp"
        android:layout_height="90dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="16dp"
        android:background="@android:color/transparent"
        android:contentDescription="Próximo"
        android:scaleType="centerCrop"
        android:src="@drawable/foto1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- img Lottie -->
    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottieLivro"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="128dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.484"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:lottie_autoPlay="true"
        app:lottie_fileName="mensagem.json"
        app:lottie_loop="true" />

</androidx.constraintlayout.widget.ConstraintLayout>