<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/tela_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_cinza"
    tools:context=".Postagem">

    <ImageView
        android:id="@+id/banner_obra"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop"
        android:adjustViewBounds="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintHeight_percent="0.4"
        app:srcCompat="@drawable/sinners1" />

    <ImageView
        android:id="@+id/btn_voltar_postagem"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="12dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:clickable="true"
        android:focusable="true"
        android:contentDescription="Voltar"
        android:padding="4dp"
        android:src="@drawable/ic_arrow_back"
        android:tint="@color/white"
        app:layout_constraintStart_toStartOf="@id/banner_obra"
        app:layout_constraintTop_toTopOf="@id/banner_obra" />

    <View
        android:id="@+id/edge_shadow"
        android:layout_width="0dp"
        android:layout_height="80dp"
        android:layout_marginTop="-120dp"
        android:background="@drawable/edge_shadow_top"
        android:rotation="-180"
        app:layout_constraintTop_toBottomOf="@id/banner_obra"
        tools:layout_editor_absoluteX="0dp" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="-60dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/banner_obra">

    <LinearLayout
        android:id="@+id/card_conteudo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/container_top_rounded"
        android:orientation="vertical"
        android:padding="20dp"
        android:minHeight="400dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/profile1"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/user_white" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txtUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:text="Fulano"
                    android:textColor="@color/white"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/txtObra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_medium"
                    android:text="Sinners (2025)"
                    android:textColor="#B3FFFFFF"
                    android:textSize="13sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imgObra"
                android:layout_width="56dp"
                android:layout_height="80dp"
                android:contentDescription="Poster da obra"
                android:src="@drawable/sinners1" />
        </LinearLayout>

        <Button
            android:id="@+id/btnSeguir"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/primary"
            android:fontFamily="@font/roboto_medium"
            android:text="Seguir"
            android:textColor="@color/white"
            app:cornerRadius="18dp" />

        <TextView
            android:id="@+id/txtPost"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/roboto_medium"
            android:lineSpacingExtra="1dp"
            android:lineSpacingMultiplier="1.1"
            android:text="Ryan Coogler faz de Sinners uma ode trágica ao deep south, mergulhando na gênese da América..."
            android:textColor="@color/white"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/btnLerMais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto_medium"
            android:text="Ler mais"
            android:textColor="@color/primary" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="20dp"
            android:background="@color/linhas" />

        <TextView
            android:id="@+id/txtComent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:fontFamily="@font/poppins_bold"
            android:text="Comentários"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <LinearLayout
            android:id="@+id/box_comentario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/inputComentario"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/input_background"
                android:fontFamily="@font/roboto_medium"
                android:hint="Escreva um comentário..."
                android:maxLines="3"
                android:minLines="1"
                android:minHeight="40dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:textColor="@color/white"
                android:textColorHint="#80FFFFFF" />

            <Button
                android:id="@+id/btnEnviarComentario"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginStart="8dp"
                android:backgroundTint="@color/primary"
                android:fontFamily="@font/roboto_medium"
                android:text="Enviar"
                android:textColor="@color/white"
                app:cornerRadius="20dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/listaComentarios"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:orientation="vertical" />

    </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>

