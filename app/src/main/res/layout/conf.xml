<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/conf_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_large">

        <!-- Card de perfil -->
        <LinearLayout
            android:id="@+id/card_profile"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/container_dr"
            android:padding="@dimen/padding_large"
            android:layout_marginBottom="@dimen/margin_large"
            android:gravity="center_vertical"
            android:elevation="@dimen/card_elevation"
            android:clickable="true"
            android:focusable="true"
            android:backgroundTint="#1e1e1e">

            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/avatar"
                android:background="@drawable/border"
                android:scaleType="centerCrop"
                android:layout_marginEnd="@dimen/margin_large" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/profile_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome do Usuário"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_large"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_bold" />

                <TextView
                    android:id="@+id/profile_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="arroba do usuário"
                    android:textColor="@color/linhas"
                    android:textSize="@dimen/text_medium"
                    android:fontFamily="@font/poppins_italic" />
            </LinearLayout>

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_arrow_thick"
                app:tint="@color/white" />
        </LinearLayout>

        <!-- Seção de Configurações -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="@dimen/margin_large">

            <!-- Card das opções -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/container_dr"
                android:padding="@dimen/padding_small"
                android:backgroundTint="#1e1e1e"
                android:elevation="@dimen/card_elevation">

                <!-- Detalhes do perfil -->
                <LinearLayout
                    android:id="@+id/option_profile_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:padding="@dimen/padding_medium"
                    android:minHeight="48dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/avatar"
                        app:tint="@color/white"
                        android:layout_marginEnd="@dimen/margin_medium" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Detalhes do perfil"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_medium"
                        android:fontFamily="@font/poppins_bold" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_thick"
                        app:tint="@color/white" />
                </LinearLayout>

                <!-- Senha -->
                <LinearLayout
                    android:id="@+id/option_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:padding="@dimen/padding_medium"
                    android:minHeight="48dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/lock"
                        app:tint="@color/white"
                        android:layout_marginEnd="@dimen/margin_medium" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Senha"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_medium"
                        android:fontFamily="@font/poppins_bold" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_thick"
                        app:tint="@color/white" />
                </LinearLayout>

                <!-- Notificações -->
                <LinearLayout
                    android:id="@+id/option_notifications"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:padding="@dimen/padding_medium"
                    android:minHeight="48dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/sino"
                        app:tint="@color/white"
                        android:layout_marginEnd="@dimen/margin_medium" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Notificações"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_medium"
                        android:fontFamily="@font/poppins_bold" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_thick"
                        app:tint="@color/white" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Seção de Informações -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Card das opções -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/container_dr"
                android:padding="@dimen/padding_small"
                android:backgroundTint="#1e1e1e"
                android:elevation="@dimen/card_elevation">

                <!-- Sobre o aplicativo -->
                <LinearLayout
                    android:id="@+id/option_about"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:padding="@dimen/padding_medium"
                    android:minHeight="48dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/home_img"
                        app:tint="@color/white"
                        android:layout_marginEnd="@dimen/margin_medium" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sobre o aplicativo"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_medium"
                        android:fontFamily="@font/poppins_bold" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_thick"
                        app:tint="@color/white" />
                </LinearLayout>

                <!-- Acessibilidade -->
                <LinearLayout
                    android:id="@+id/option_acessibilidade"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:padding="@dimen/padding_medium"
                    android:minHeight="48dp">

                                         <ImageView
                         android:layout_width="24dp"
                         android:layout_height="24dp"
                         android:src="@drawable/lapis_img"
                         app:tint="@color/white"
                         android:layout_marginEnd="@dimen/margin_medium" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Acessibilidade"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_medium"
                        android:fontFamily="@font/poppins_bold" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_thick"
                        app:tint="@color/white" />
                </LinearLayout>

                <!-- Ajuda/FAQ -->
                <LinearLayout
                    android:id="@+id/option_help"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:padding="@dimen/padding_medium"
                    android:minHeight="48dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/comentarios"
                        app:tint="@color/white"
                        android:layout_marginEnd="@dimen/margin_medium" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ajuda/FAQ"
                        android:textColor="@color/white"
                        android:textSize="@dimen/text_medium"
                        android:fontFamily="@font/poppins_bold" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_arrow_thick"
                        app:tint="@color/white" />
                </LinearLayout>

                <!-- Desativar conta -->
                <LinearLayout
                    android:id="@+id/sair_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:padding="@dimen/padding_medium"
                    android:minHeight="48dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/sair"
                        app:tint="@color/orange"
                        android:layout_marginEnd="@dimen/margin_medium" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sair da minha conta"
                        android:textColor="@color/orange"
                        android:textSize="@dimen/text_medium"
                        android:fontFamily="@font/poppins_bold" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <!-- Espaço no final -->
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_large" />

    </LinearLayout>
</ScrollView> 