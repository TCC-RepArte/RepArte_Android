<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_gradiant4"
    android:clipChildren="false"
    android:clipToPadding="false"
    tools:context=".ExibirPerfil">

    <!-- NestedScrollView para permitir scroll unificado do perfil e postagens -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_content"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:background="@drawable/my_gradiant4"
        android:clipToPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/profile_scroll_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/my_gradiant4">

            <!-- Header com botões voltar e menu -->
            <LinearLayout
                android:id="@+id/botões_superiores"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:minHeight="56dp"
                android:background="@android:color/transparent"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="16dp"
                android:paddingTop="8dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Botão Voltar -->
                <LinearLayout
                    android:id="@+id/btn_Voltar"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:gravity="center"
                    android:background="@drawable/border"
                    android:backgroundTint="#2E1A47"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:contentDescription="Voltar"
                        android:scaleType="centerInside"
                        app:srcCompat="@drawable/ic_arrow_back"
                        app:tint="@color/white" />
                </LinearLayout>

                <!-- Espaçador -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />
            </LinearLayout>

            <!-- Foto de Perfil Circular (sobreposta ao banner, centralizada) - FORA do card_content para não ser cortada -->
            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="70dp"
                android:background="@drawable/circle_border"
                android:contentDescription="Foto de perfil"
                android:scaleType="centerCrop"
                android:clipToPadding="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/user_white" />

            <!-- Container principal do perfil (sem card branco, tudo integrado) -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/card_content"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="120dp"
                android:paddingHorizontal="16dp"
                android:paddingBottom="16dp"
                android:background="@android:color/transparent"
                android:clipChildren="false"
                android:clipToPadding="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <!-- Nome do Usuário (centralizado) -->
                <TextView
                    android:id="@+id/exibirNome"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="60dp"
                    android:text="Nome de Exibição"
                    android:textColor="@color/white"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:fontFamily="@font/league_spartan_bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <!-- @ do Usuário (centralizado) -->
                <TextView
                    android:id="@+id/exibirUser"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="@usuario"
                    android:textColor="@color/linhas"
                    android:textSize="16sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_medium"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/exibirNome" />

                <!-- Biografia/Descrição (centralizada) -->
                <TextView
                    android:id="@+id/textViewBio"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:layout_marginHorizontal="24dp"
                    android:text="Adicione uma descrição sobre você!"
                    android:textColor="@color/white"
                    android:textSize="14sp"
                    android:maxLines="3"
                    android:ellipsize="end"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_medium"
                    android:alpha="0.8"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/exibirUser" />

                <!-- Botão Editar Perfil (centralizado) -->
                <Button
                    android:id="@+id/btnSalvar"
                    android:layout_width="wrap_content"
                    android:layout_height="48dp"
                    android:layout_marginTop="20dp"
                    android:minWidth="200dp"
                    android:text="Editar Perfil"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:backgroundTint="@color/primary"
                    android:fontFamily="@font/roboto_medium"
                    app:cornerRadius="24dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textViewBio" />

                <!-- Estatísticas (Seguindo, Seguidores, Curtidas) - centralizadas -->
                <LinearLayout
                    android:id="@+id/estatisticas_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btnSalvar">

                    <!-- Seguindo -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="24dp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/textSeguindo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto_medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Seguindo"
                            android:textColor="@color/linhas"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto_medium" />
                    </LinearLayout>

                    <!-- Seguidores -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="24dp"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/textSeguidores"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto_medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Seguidores"
                            android:textColor="@color/linhas"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto_medium" />
                    </LinearLayout>

                    <!-- Curtidas -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/textCurtidas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto_medium" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Curtidas"
                            android:textColor="@color/linhas"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto_medium" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Divisor -->
                <View
                    android:id="@+id/divisor_estatisticas"
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="24dp"
                    android:layout_marginHorizontal="16dp"
                    android:background="@color/linhas"
                    android:alpha="0.3"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/estatisticas_layout" />

                <!-- Menu de Abas (Postagens, Comentários, Sobre mim) -->
                <LinearLayout
                    android:id="@+id/menu_abas"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/estatisticas_layout">

                    <TextView
                        android:id="@+id/textViewPostagem"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Postagens"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:paddingVertical="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/roboto_medium" />

                    <TextView
                        android:id="@+id/textViewComentarios"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Comentários"
                        android:textColor="@color/linhas"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:paddingVertical="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/roboto_medium" />

                    <TextView
                        android:id="@+id/textViewSobreMim"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sobre mim"
                        android:textColor="@color/linhas"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:paddingVertical="12dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:fontFamily="@font/roboto_medium" />
                </LinearLayout>

                <!-- Indicador (linha laranja abaixo da aba selecionada) -->
                <View
                    android:id="@+id/indicatorView"
                    android:layout_width="0dp"
                    android:layout_height="3dp"
                    android:background="@color/primary"
                    android:visibility="invisible"
                    app:layout_constraintTop_toBottomOf="@+id/menu_abas"
                    app:layout_constraintStart_toStartOf="@+id/menu_abas"
                    app:layout_constraintEnd_toEndOf="@+id/menu_abas" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- RecyclerView para postagens do usuário -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_postagens_perfil"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:background="@android:color/transparent"
                android:clipToPadding="false"
                android:clipChildren="false"
                android:paddingHorizontal="8dp"
                android:paddingBottom="16dp"
                android:nestedScrollingEnabled="false"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/card_content" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
