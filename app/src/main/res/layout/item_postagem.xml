<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="#1a0f2e"
    android:foreground="?android:attr/selectableItemBackground">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/div_teste1">

        <!-- Container principal com todos os elementos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <!-- Cabeçalho da postagem com foto e nome do usuário -->
        <LinearLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:id="@+id/foto_usuario"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:src="@drawable/user_white"
                android:scaleType="centerCrop"
                android:background="@drawable/border"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Foto do usuário"
                android:elevation="2dp" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/nome_usuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome do Usuário"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/roboto_medium"
                    android:letterSpacing="0.02" />

                <TextView
                    android:id="@+id/usuario_arroba"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@usuario"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:alpha="0.7"
                    android:fontFamily="@font/roboto_medium"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/data_criacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="há 2 horas"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:alpha="0.65"
                    android:fontFamily="@font/roboto_light"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Título da postagem -->
        <TextView
            android:id="@+id/titulo_postagem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Título da Postagem"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="12dp"
            android:fontFamily="@font/roboto_medium"
            android:letterSpacing="0.01"
            android:visibility="gone" />

        <!-- Texto da postagem -->
        <TextView
            android:id="@+id/texto_postagem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Texto da postagem aqui..."
            android:textSize="15sp"
            android:textColor="@color/white"
            android:alpha="0.95"
            android:layout_marginBottom="20dp"
            android:lineSpacingExtra="4dp"
            android:maxLines="6"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_light"
            android:letterSpacing="0.01" />

        <!-- Seção da obra -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/div_teste2"
            android:padding="16dp"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/poster_obra"
                android:layout_width="100dp"
                android:layout_height="150dp"
                android:src="@drawable/user_white"
                android:scaleType="centerCrop"
                android:background="@drawable/border"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Poster da obra"
                android:elevation="3dp"
                android:foreground="?android:attr/selectableItemBackground" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sobre a obra:"
                    android:textSize="13sp"
                    android:textColor="@color/white"
                    android:alpha="0.6"
                    android:layout_marginBottom="6dp"
                    android:fontFamily="@font/roboto_light"
                    android:letterSpacing="0.01" />

                <TextView
                    android:id="@+id/titulo_obra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Título da Obra"
                    android:textSize="17sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/roboto_medium"
                    android:letterSpacing="0.01"
                    android:maxLines="2"
                    android:ellipsize="end" />

            </LinearLayout>

        </LinearLayout>

        <!-- Rodapé com curtidas e comentários -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingTop="8dp"
            android:paddingBottom="4dp">

            <LinearLayout
                android:id="@+id/like_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginEnd="32dp"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/like_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_thumb_up"
                    android:contentDescription="Curtidas"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/curtidas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:alpha="0.9"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/roboto_medium" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dislike_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:padding="8dp"
                android:background="?android:attr/selectableItemBackground">

                <ImageView
                    android:id="@+id/dislike_icon"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_thumb_down"
                    android:contentDescription="Descurtidas"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/comentarios"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="15sp"
                    android:textColor="@color/white"
                    android:alpha="0.9"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/roboto_medium" />

            </LinearLayout>

        </LinearLayout>

        </LinearLayout>

        <!-- Botão laranja no canto inferior direito -->
        <ImageButton
            android:id="@+id/btn_abrir_postagem"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/btn_abrir_postagem_bg"
            android:contentDescription="Abrir postagem completa"
            android:elevation="10dp"
            android:padding="14dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_arrow_forward_light"
            app:tint="@color/white"
            android:foreground="?android:attr/selectableItemBackground" />

    </FrameLayout>

</androidx.cardview.widget.CardView>
