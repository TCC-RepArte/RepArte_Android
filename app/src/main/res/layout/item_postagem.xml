<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#170d26">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:background="@drawable/div_teste1">

        <!-- Container principal com todos os elementos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

        <!-- Cabeçalho da postagem com foto e nome do usuário -->
        <LinearLayout
            android:id="@+id/header_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <ImageView
                android:id="@+id/foto_usuario"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/user_white"
                android:scaleType="centerCrop"
                android:background="@drawable/border"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Foto do usuário" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp">

                <TextView
                    android:id="@+id/nome_usuario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nome do Usuário"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/roboto_medium" />

                <TextView
                    android:id="@+id/usuario_arroba"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@usuario"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:alpha="0.7"
                    android:fontFamily="@font/roboto_medium"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/data_criacao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="há 2 horas"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:alpha="0.7"
                    android:fontFamily="@font/roboto_light" />

            </LinearLayout>

        </LinearLayout>

        <!-- Título da postagem -->
        <TextView
            android:id="@+id/titulo_postagem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Título da Postagem"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/roboto_medium"
            android:visibility="gone" />

        <!-- Texto da postagem -->
        <TextView
            android:id="@+id/texto_postagem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Texto da postagem aqui..."
            android:textSize="14sp"
            android:textColor="@color/white"
            android:layout_marginBottom="16dp"
            android:lineSpacingExtra="2dp"
            android:maxLines="6"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_light" />

        <!-- Seção da obra -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/div_teste2"
            android:padding="12dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/poster_obra"
                android:layout_width="88dp"
                android:layout_height="151dp"
                android:src="@drawable/user_white"
                android:scaleType="centerCrop"
                android:background="@drawable/border"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Poster da obra" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginStart="12dp"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sobre a obra:"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:alpha="0.7"
                    android:layout_marginBottom="4dp"
                    android:fontFamily="@font/roboto_light" />

                <TextView
                    android:id="@+id/titulo_obra"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Título da Obra"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/roboto_medium" />

            </LinearLayout>

        </LinearLayout>

        <!-- Rodapé com curtidas e comentários -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/like_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginEnd="24dp"
                android:clickable="true"
                android:focusable="true"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/like_icon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_thumb_up"
                    android:contentDescription="Curtidas"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/curtidas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:alpha="0.7"
                    android:layout_marginStart="6dp"
                    android:fontFamily="@font/roboto_medium" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/dislike_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:clickable="true"
                android:focusable="true"
                android:padding="4dp">

                <ImageView
                    android:id="@+id/dislike_icon"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_thumb_down"
                    android:contentDescription="Descurtidas"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/comentarios"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:alpha="0.7"
                    android:layout_marginStart="6dp"
                    android:fontFamily="@font/roboto_medium" />

            </LinearLayout>

        </LinearLayout>

        </LinearLayout>

        <!-- Botão laranja no canto inferior direito -->
        <ImageButton
            android:id="@+id/btn_abrir_postagem"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="bottom|end"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="0dp"
            android:background="@drawable/btn_abrir_postagem_bg"
            android:contentDescription="Abrir postagem completa"
            android:elevation="8dp"
            android:padding="12dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_arrow_forward_light"
            app:tint="@color/white" />

    </FrameLayout>

</androidx.cardview.widget.CardView>
