<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/my_gradiant_drawable"
    tools:context=".ForgotRequestActivity">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/hammersmith_one"
        android:text="Recuperar senha"
        android:textColor="#C9FD4F0A"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/tv_sub"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_sub"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:layout_marginBottom="24dp"
        android:text="Digite seu e-mail ou usuário para enviarmos um código."
        android:textColor="#AEAEAE"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@+id/container_alvo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title" />

    <View
        android:id="@+id/container_alvo"
        android:layout_width="0dp"
        android:layout_height="58dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/container_dr"
        app:layout_constraintBottom_toTopOf="@+id/btn_next"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_sub" />

    <EditText
        android:id="@+id/et_alvo"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:hint=" E-mail ou @usuario"
        android:textColor="#FFFFFF"
        android:textColorHint="#AEAEAE"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toTopOf="@id/container_alvo"
        app:layout_constraintBottom_toBottomOf="@id/container_alvo"
        app:layout_constraintStart_toStartOf="@id/container_alvo"
        app:layout_constraintEnd_toEndOf="@id/container_alvo" />

    <Button
        android:id="@+id/btn_next"
        android:layout_width="0dp"
        android:layout_height="62dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:text="Enviar código"
        android:textSize="16sp"
        android:fontFamily="@font/poppins_bold"
        android:backgroundTint="#C9FD4F0A"
        app:layout_constraintTop_toBottomOf="@id/container_alvo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

