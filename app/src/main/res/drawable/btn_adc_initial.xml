<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background retangular com bordas arredondadas -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#3d3d3d" />
            <stroke android:width="3dp" android:color="@color/border" />
            <corners android:radius="15dp" />
        </shape>
    </item>
    
    <!-- Linha horizontal do + -->
    <item android:gravity="center">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <size android:width="30dp" android:height="4dp" />
        </shape>
    </item>
    
    <!-- Linha vertical do + -->
    <item android:gravity="center">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" />
            <size android:width="4dp" android:height="30dp" />
        </shape>
    </item>
</layer-list> 